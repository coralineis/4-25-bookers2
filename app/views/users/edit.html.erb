<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label><br>
          <input class="form-control name" type="text" value= name="user[name]" id="user_name">
        </div>
        <div class="form-groupe">
          <label for="user_image">Image</label><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-groupe">
          <label for="user_introduction">Introduction</label><br>
          <textarea class="form-control introduction" name="user[introduction]" id="user_introduction"></textarea>
        </div>
        <div class="form-groupe">
          <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <%= render 'books/list', book: @new_book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(40,40) %></td>
            <td><%= link_to @books.title, book_path(@book.id) %></td>
            <td><%= @books.body %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <% if @book.profile_image.attched? %>
        <%= image_tag book.profile_image, size: "63*63" %>
      <% else %>
        <%= image_tag 'no-image', size: "63*63" %>
      <% end %>
      <table class="table">
        <tbody>
          <%= form_with model: @ do |f| %>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= f.text_field :current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= f.text_area :current_user.introduction %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_current_user.id" href="/users/current_user.id/edit"></a>
      </div>
      
      <h2 class="mt-3">New book</h2>
      
    </div>
  </div>
</div>

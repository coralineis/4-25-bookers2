<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <% if @book.profile_image.attched? %>
        <%= image_tag book.profile_image, size: "63*63" %>
      <% else %>
        <%= image_tag 'no-image', size: "63*63" %>
      <% end %>
      <table class="table">
        <tbody>
          <%= form_with model: @book do |f| %>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= f.text_field :@book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= f.text_area :@book.user.introduction %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_current_user.id" href="/users/current_user.id/edit"></a>
      </div>

      <h2 class="mt-3">New book</h2>
      <form action="/books" accept-charset="UTF-8" method="post">
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label for="book-opinion">Opinion</label>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create book', class: 'btn btn-success' %>
          </div>
        <% end %>
      </form>

    </div>
  </div>
</div>

<h2>Books</h2>

<% @books.each do |book| %>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th>
       <% if @book.profile_image.attched? %>
        <%= image_tag book.profile_image, size: "40*40" %>
      <% else %>
        <%= image_tag 'no_image', size: "40*40" %>
      <% end %>
      </th>
      <th><%= book.title %></th>
      <th><%= book.body %></th>

    </tr>
  </tbody>
</table>
<% end %>
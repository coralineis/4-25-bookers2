<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'list', book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% @books.each do |book| %>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>
              <%= image_tag @book.user.get_profile_image(40, 40) %>
            </th>
            <th><%= link_to book.title, book_path(current_user.id) %></th>
            <th><%= book.body %></th>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>




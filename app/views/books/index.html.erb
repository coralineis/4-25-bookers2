<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @book.user.get_profile_image(63, 63) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_current_user.id" href="/users/current_user.id/edit"></a>
      </div>

      <h2 class="mt-3">New book</h2>
      <form action="/books" accept-charset="UTF-8" method="post">
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label><br>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label for="book-opinion">Opinion</label><br>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create book', class: 'btn btn-success' %>
          </div>
        <% end %>
      </form>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% @books.each do |book| %>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <th>
              <%= image_tag @book.user.get_profile_image(40, 40) %>
            </th>
            <th><%= link_to book.title, book_path(current_user.id) %></th>
            <th><%= book.body %></th>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>



